{
  "name": "clifer",
  "version": "0.0.0-development",
  "description": "A light weight library for building command line interface for NodeJS applications",
  "main": "lib/index.js",
  "repository": "https://github.com/rintoj/clifer.git",
  "author": "Rinto Jose <rintoj@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn run lint && rimraf lib && tsc",
    "test": "jest",
    "lint": "eslint --fix && tsc -p . --noEmit && yarn prettier && yarn test",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\" -c",
    "prepublish": "yarn run build",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/jest": "^29.0.1",
    "@types/node": "^18.7.16",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules",
      "/lib"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "isolatedModules": true,
          "tsconfig": "./tsconfig.json"
        }
      ]
    },
    "collectCoverage": false,
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/test/**",
      "!**/src/error/**",
      "!**/src/decorators/**",
      "!**/coverage/**"
    ]
  },
  "dependencies": {
    "chalk": "4.1.2",
    "name-util": "^1.1.0"
  }
}
